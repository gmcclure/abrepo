<div class="page-header">
  <h2>Your Bibliographies for <%= @course.title %></h2>
</div>

<p><%= link_to 'Create a New Bibliography', new_course_bibliography_path, class: 'btn btn-primary' %></p>

<% if @bibliographies.count > 0 %>
<table class="table">
  <thead>
    <tr>
      <th>Bibliography List</th>
    </tr>
  </thead>

  <tbody>
    <% @bibliographies.each do |bibliography| %>
      <tr>
        <td>
          <%= link_to 'Edit', edit_course_bibliography_path(@course, bibliography), class: 'btn btn-small btn-primary' %> |
          <%= link_to 'X', "/courses/#{@course.id}/bibliographies/#{bibliography.id}", method: :delete, data: { confirm: 'Are you sure you wish to delete this bibliography? All of your information will be permanently lost.' }, class: 'btn btn-small btn-danger' %> |
          <%= bibliography.title %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <p>You have no bibliographies for this course.</p>
<% end %>
